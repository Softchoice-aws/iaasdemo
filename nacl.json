{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"Provisioning NACL for ICS",

  "Parameters":{
    "vpcId":{"Type":"String"},
    "publicSubnetCIDR0":{"Type":"String"},
    "publicSubnetCIDR1":{"Type":"String"},
    "privateSubnetCIDR0":{"Type":"String"},
    "privateSubnetCIDR1":{"Type":"String"},
    "dbSubnetCIDR0":{"Type":"String"},
    "dbSubnetCIDR1":{"Type":"String"}
  },
"Resources":{
  "PublicNetworkAcl" : {
    "Type" : "AWS::EC2::NetworkAcl",
    "Properties" : {
      "VpcId" : {"Ref" : "vpcId"},
       "Tags" :  [{"Key" : "Name", "Value" : "public-nacl" }]
    }
  },
  "PrivateNetworkAcl" : {
     "Type" : "AWS::EC2::NetworkAcl",
     "Properties" : {
       "VpcId" : {"Ref" : "vpcId"},
      "Tags" : [{"Key" : "Name", "Value" : "private-nacl" }]
    }
  },
  "DbNetworkAcl" : {
     "Type" : "AWS::EC2::NetworkAcl",
     "Properties" : {
      "VpcId" : {"Ref" : "vpcId"},
      "Tags" : [{"Key" : "Name", "Value" : "db-nacl" }]
    }
  },
  "publicSubnetNetworkAclAssociation0" : {
    "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
    "Properties" : {
       "SubnetId" : { "Ref" : "publicSubnetCIDR0" },
       "NetworkAclId" : { "Ref" : "PublicNetworkAcl" }
     }
   },
  "publicSubnetNetworkAclAssociation1" : {
    "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
    "Properties" : {
       "SubnetId" : { "Ref" : "publicSubnetCIDR1" },
       "NetworkAclId" : { "Ref" : "PublicNetworkAcl" }
     }
   },
  "privateSubnetNetworkAclAssociation0" : {
    "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
    "Properties" : {
       "SubnetId" : { "Ref" : "privateSubnetCIDR0" },
       "NetworkAclId" : { "Ref" : "PrivateNetworkAcl" }
     }
   },
   "privateSubnetNetworkAclAssociation1" : {
    "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
    "Properties" : {
       "SubnetId" : { "Ref" : "privateSubnetCIDR1" },
       "NetworkAclId" : { "Ref" : "PrivateNetworkAcl" }
     }
   },
   "dbSubnetNetworkAclAssociation0" : {
    "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
    "Properties" : {
       "SubnetId" : { "Ref" : "dbSubnetCIDR0" },
       "NetworkAclId" : { "Ref" : "DbNetworkAcl" }
     }
   },
   "dbSubnetNetworkAclAssociation1" : {
    "Type" : "AWS::EC2::SubnetNetworkAclAssociation",
    "Properties" : {
       "SubnetId" : { "Ref" : "dbSubnetCIDR1" },
       "NetworkAclId" : { "Ref" : "DbNetworkAcl" }
     }
   },
   "InboundPublicNetworkAclEntry" : {
   "Type" : "AWS::EC2::NetworkAclEntry",
   "Properties" : {
     "NetworkAclId" : {"Ref" : "PublicNetworkAcl"},
     "RuleNumber" : "100",
     "Protocol" : "-1",
     "RuleAction" : "allow",
     "Egress" : "false",
     "CidrBlock" : "0.0.0.0/0",
     "PortRange" : {"From" : "0", "To" : "65535"}
     }
   },
   "OutboundPublicNetworkAclEntry" : {
   "Type" : "AWS::EC2::NetworkAclEntry",
   "Properties" : {
     "NetworkAclId" : {"Ref" : "PublicNetworkAcl"},
     "RuleNumber" : "100",
     "Protocol" : "-1",
     "RuleAction" : "allow",
     "Egress" : "true",
     "CidrBlock" : "0.0.0.0/0",
     "PortRange" : {"From" : "0", "To" : "65535"}
     }
   },
   "InboundPrivateNetworkAclEntry" : {
   "Type" : "AWS::EC2::NetworkAclEntry",
   "Properties" : {
     "NetworkAclId" : {"Ref" : "PrivateNetworkAcl"},
     "RuleNumber" : "100",
     "Protocol" : "-1",
     "RuleAction" : "allow",
     "Egress" : "false",
     "CidrBlock" : "0.0.0.0/0",
     "PortRange" : {"From" : "0", "To" : "65535"}
     }
   },
   "OutboundPrivateNetworkAclEntry" : {
   "Type" : "AWS::EC2::NetworkAclEntry",
   "Properties" : {
     "NetworkAclId" : {"Ref" : "PrivateNetworkAcl"},
     "RuleNumber" : "100",
     "Protocol" : "-1",
     "RuleAction" : "allow",
     "Egress" : "true",
     "CidrBlock" : "0.0.0.0/0",
     "PortRange" : {"From" : "0", "To" : "65535"}
     }
   },
   "InboundDbNetworkAclEntry" : {
   "Type" : "AWS::EC2::NetworkAclEntry",
   "Properties" : {
     "NetworkAclId" : {"Ref" : "DbNetworkAcl"},
     "RuleNumber" : "100",
     "Protocol" : "-1",
     "RuleAction" : "allow",
     "Egress" : "false",
     "CidrBlock" : "0.0.0.0/0",
     "PortRange" : {"From" : "0", "To" : "65535"}
     }
   },
   "OutboundDbNetworkAclEntry" : {
   "Type" : "AWS::EC2::NetworkAclEntry",
   "Properties" : {
     "NetworkAclId" : {"Ref" : "DbNetworkAcl"},
     "RuleNumber" : "100",
     "Protocol" : "-1",
     "RuleAction" : "allow",
     "Egress" : "true",
     "CidrBlock" : "0.0.0.0/0",
     "PortRange" : {"From" : "0", "To" : "65535"}
     }
   }
 },
"Outputs":{
   "publicNACL":{
     "Value":{"Ref":"PublicNetworkAcl"}
   },
   "privateNACL":{
     "Value":{"Ref":"PrivateNetworkAcl"}
   },
   "dbNACL":{
     "Value":{"Ref":"DbNetworkAcl"}
   }
  }
 }
